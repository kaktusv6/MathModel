.row
	.col-md-8.col-md-offset-2.title
		h1 Задайте параметры i-ого города
.row
	form(action="save-json.php" method="get").col-md-6.col-md-offset-3.form-inline.row
		.form-group.col-md-12
			label Название города
			input(type="text" placeholder="6 .. 24" name="nameCity").form-control.input-model#name-city-input
		.form-group.col-md-12
			label(for="cities-input") Численость населения
			select(name="type-population-city").form-control.input-model#type-city-input
				option Мегаполис
		.form-group.col-md-12
			label(for="mounth-input") Процент заболевших людей (%)
			input(type="text" placeholder="1 .. 100" name="infected").form-control.input-model#infected-input
		.form-group.col-md-12
			label(for="price-input") Процент привитых людей (%)
			input(type="text" placeholder="1 .. 100" name="vacinated").form-control.input-model#vacinated-input
		.form-group.col-md-12
			label(for="fund-input") Насыщеность транспортного сообщения
			input(type="text" placeholder="1 .. 100" name="transport").form-control.input-model#transport-input
		button(type="submit").btn.btn-success.col-md-2.col-md-offset-5.but-submit Ввод